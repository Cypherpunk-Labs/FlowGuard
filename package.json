{
  "name": "flowguard",
  "publisher": "mkemp",
  "displayName": "FlowGuard - AI-Powered Development Workflow Manager",
  "description": "AI-powered development workflow manager for epic/spec/ticket management",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "configuration": {
      "title": "FlowGuard",
      "properties": {
        "flowguard.llm.provider": {
          "type": "string",
          "enum": ["openai", "anthropic", "local"],
          "default": "openai",
          "description": "LLM provider to use"
        },
        "flowguard.llm.model": {
          "type": "string",
          "description": "Model name (e.g., gpt-4-turbo-preview, claude-3-5-sonnet-20241022)"
        },
        "flowguard.llm.temperature": {
          "type": "number",
          "default": 0.7,
          "minimum": 0,
          "maximum": 2,
          "description": "Temperature for LLM generation"
        },
        "flowguard.llm.baseUrl": {
          "type": "string",
          "description": "Base URL for local LLM provider"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "flowguard-sidebar",
          "title": "FlowGuard",
          "icon": "resources/flowguard-icon.svg"
        }
      ]
    },
    "views": {
      "flowguard-sidebar": [
        {
          "id": "flowguard.sidebarView",
          "name": "FlowGuard",
          "type": "webview",
          "contextualTitle": "FlowGuard Manager"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "flowguard.sidebarView",
        "contents": "No epic initialized.\n[Initialize Epic](command:flowguard.initializeEpic)"
      }
    ],
    "commands": [
      {
        "command": "flowguard.createSpec",
        "title": "New Spec",
        "icon": "$(add)"
      },
      {
        "command": "flowguard.createTicket",
        "title": "New Ticket",
        "icon": "$(add)"
      },
      {
        "command": "flowguard.refreshSidebar",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "flowguard.initializeEpic",
        "title": "Initialize Epic"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "flowguard.refreshSidebar",
          "when": "view == flowguard.sidebarView",
          "group": "navigation"
        },
        {
          "command": "flowguard.createSpec",
          "when": "view == flowguard.sidebarView",
          "group": "navigation"
        },
        {
          "command": "flowguard.createTicket",
          "when": "view == flowguard.sidebarView",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "compile": "webpack --config webpack.config.js --mode production && webpack --config webpack.webview.config.js --mode production",
    "watch": "webpack --config webpack.config.js --mode development --watch & webpack --config webpack.webview.config.js --mode development --watch",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js",
    "package": "npm run compile && npx vsce package"
  },
  "dependencies": {
    "gray-matter": "^4.0.3",
    "simple-git": "^3.19.0",
    "uuid": "^9.0.0",
    "openai": "^4.0.0",
    "@anthropic-ai/sdk": "^0.20.0",
    "tree-sitter": "^0.21.0",
    "tree-sitter-typescript": "^0.21.0",
    "tree-sitter-javascript": "^0.21.0",
    "tree-sitter-python": "^0.21.0",
    "svelte": "^4.0.0"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/node": "^20.0.0",
    "@types/uuid": "^9.0.0",
    "typescript": "^5.0.0",
    "webpack": "^5.0.0",
    "webpack-cli": "^5.0.0",
    "ts-loader": "^9.0.0",
    "svelte-loader": "^3.1.0",
    "svelte-preprocess": "^5.0.0",
    "css-loader": "^6.0.0",
    "style-loader": "^3.0.0",
    "html-webpack-plugin": "^5.0.0"
  }
}
