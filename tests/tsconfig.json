{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "lib": ["ES2020"],
    "outDir": "../out/tests",
    "rootDir": ".",
    "sourceMap": true,
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "types": ["node", "mocha", "vscode"]
  },
  "include": [
    "integration/**/*",
    "utils/**/*"
  ],
  "exclude": [
    "node_modules",
    "../out"
  ],
  "references": [
    { "path": ".." }
  ]
}
